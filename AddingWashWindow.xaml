<Window x:Class="WashingHouseChetvernyaDemo.AddingWashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WashingHouseChetvernyaDemo"
        mc:Ignorable="d"
        Title="AddingWashWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Добавление стирки" HorizontalAlignment="Left" Margin="324,51,0,0" VerticalAlignment="Top"/>
        <ComboBox DisplayMemberPath="NumberMachine" SelectedIndex="1" Name="CmbMachine" HorizontalAlignment="Left" Margin="311,99,0,0" VerticalAlignment="Top" Width="148" SelectionChanged="CmbMachineSelectionChanged"/>
        <ComboBox DisplayMemberPath="NamePowder" SelectedIndex="1" Name="CmbPowder" HorizontalAlignment="Left" Margin="311,144,0,0" VerticalAlignment="Top" Width="148" SelectionChanged="CmbPowderSelectionChanged"/>
        <CheckBox Content="Сушка" HorizontalAlignment="Left" Margin="362,203,0,0" VerticalAlignment="Top"/>
        <Button Content="Добавить новую стирку" HorizontalAlignment="Left" Margin="317,254,0,0" VerticalAlignment="Top" Width="144" Height="27"/>
        <Button Content="Напечатать чек" HorizontalAlignment="Left" Margin="316,305,0,0" VerticalAlignment="Top" Width="144" Height="27"/>
    </Grid>
</Window>
